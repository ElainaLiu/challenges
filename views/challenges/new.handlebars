{{#if challengeableUsers.length}}
  <h1>Who do you want to challenge for the {{performance.name}}?</h1>
  <select class="ChallengeSelect">
    {{#each challengeableUsers}}
          {{#if this.spotOpen}}
            {{#unless this.challengeFull}}
              <option value="{{this.spotId}} open">
                {{this.spotId}} (open - challenged {{this.challengedCount}} time(s))
              </option>
            {{else}}
              <option disabled>
                {{this.spotId}} (open - challenged {{this.challengedCount}} time(s))
              </option>
            {{/unless}}
          {{else}}
            {{#unless this.challengeFull}}
              <option value="{{this.spotId}} {{this.name}}">
                {{this.spotId}}: {{this.name}}
              </option>
            {{else}}
              <option disabled>
                {{this.spotId}}: {{this.name}}
              </option>
            {{/unless}}
          {{/if}}
    {{/each}}
    <input type="submit" class="ChallengeSelect-submit ChallengesButton" value="Challenge"/>
  </select>
{{else}}
  <h2>Sorry, you can't make a challenge right now!</h2>
{{/if}}

<h2>Create New Performance</h2>
<form name="newPerformanceForm" id="newPerformanceForm" action="/performances/create" method="post">
  <input type="text" name="performanceName" autofocus placeholder="Name" />
  <label>Date of performance</label>
  <input type="text" id="performanceDate" name="performanceDate" placeholder=""/>
  <label>When does the challenge window open?</label>
  <input type="text" id="openAt" name="openAt" placeholder="yyyy-mm-dd 13:00"/>
  <label>When does the challenge window close?</label>
  <input type="text" name="closeAt" placeholder="yyyy-mm-dd 15:10"/>
  <label>Is this the next performance?</label>
  <input type="checkbox" name="current" default="checked" />
  <input type="submit" class="btn btn-default" value="Submit" />
</form>
<script>
  const datePickerOptions = {
    changeMonth: true,
    numberOfMonths: 1,
    dateFormat: 'yy-mm-dd'
  }
  const performanceDate = $('#performanceDate');

  performanceDate.datepicker(Object.assign({}, datePickerOptions, {
    onClose: function(selectedDate) {
      performanceDate.datepicker('option', 'minDate', selectedDate);
    }
  }));

</script>

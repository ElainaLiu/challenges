{{#each results}}
  <form action="/results/{{this.resultId}}/eval" method="post">
    <p>{{this.spotId}}</p>
    <p><span>{{this.firstName}} </span><input type="radio" name="winner" value={{this.firstNameNumber}} /></p>
    <p><span>{{this.secondName}} </span></span><input type="radio" name="winner" value={{this.secondNameNumber}} /></p>
    <textarea name="fistComments"></textarea>
    <textarea name="secondComments"></textarea>
    <input type="submit" value="Submit" />
  </form>
  <hr />
{{/each}}

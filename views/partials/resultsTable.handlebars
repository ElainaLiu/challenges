<table class="table">
  <thead>
      <tr>
        <th>Performance</th>
        <th>Opponent</th>
        <th>Won?</th>
        <th>Comments</th>
      </tr>
  </thead>
  {{#each results}}
    <tr id="row-id-"{{@index}}>
      <td>{{this.PerformanceName}}</td>
      <td>{{this.opponentName}}</td>
      {{#if this.winner}}
        <td><i class="em em-trophy"></i></td>
      {{else}}
        <td><i class="em em-crying_cat_face"></i></td>
      {{/if}}
      <td>{{this.comments}}</td>
    </tr>
  {{/each}}
</table>

<div class="challenges-user-header">
  <% display_user = local_assigns[:user].nil? ? current_user : user %>
  <% if display_user.performer? %>
    <div class="challenges-user-header-circle">
      <h3 class="challenges-user-header-circle-text"><%= display_user.current_spot.to_s %></h3>
    </div>
  <% else %>
    <h1 class="challenges-user-header-admin">Admin</h1>
  <% end %>
  <h1 class="challenges-user-header-name"><%= display_user.full_name %></h1>
</div>

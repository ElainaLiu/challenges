<% next_performance = @performance || Performance.next %>
<% if next_performance.nil? %>
  <div class="mdc-typography--title">There is no upcoming performance in the system</div>
<% else %>
  <% if next_performance.window_open? %>
    <div class="mdc-typography--display1"><%= next_performance.name %> challenges are now open!</div>
    <div class="mdc-typography--title">The window closes at <%= local_time(next_performance.window_close, "%b %d %I:%M %p") %></div>
  <% else %>
    <div class="mdc-typography--title">
      Challenge signups for <%= next_performance.name %> open at&nbsp;
      <%= local_time(next_performance.window_open, "%b %d %I:%M %p") %> and close at&nbsp;
      <%= local_time(next_performance.window_close, "%b %d %I:%M %p") %>
    </div>
  <% end %>
<% end %>

{
    "rules": {
        "indent": [
            2,
            2
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "no-console": [
            0
        ],
        "lines-around-comment": [
            "off"
        ],
        "react/jsx-indent": [
            2,
            2
        ],
        "react/jsx-indent-props": "off",
        "react/no-multi-comp": "off",
        "import/no-unresolved": "off",
        "react/jsx-filename-extension": [1,  { "extensions": [".js", ".jsx"] }]
    },
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "globals": {
        "it": true
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
          "allowImportExportEverywhere": true,
          "experimentalObjectRestSpread": true,
          "jsx": true
        }
    },
    "extends": [
        "prettier"
    ],
    "plugins": [
      "react",
      "import"
    ],
    "parser": "babel-eslint"
}
